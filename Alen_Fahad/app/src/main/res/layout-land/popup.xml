<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    >


    <ImageView
        android:id="@+id/newlisticon"
        android:layout_width="341dp"
        android:layout_height="436dp"
        android:background="@drawable/ic_baseline_commute_2422"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/toCity"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:hint="to City"
        android:textSize="24sp"

        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintStart_toStartOf="@+id/newlisticon"
        app:layout_constraintTop_toTopOf="@+id/newlisticon"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/fromCity"
        android:layout_width="136dp"
        android:layout_height="58dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:hint="from City"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/date"
        app:layout_constraintEnd_toEndOf="@+id/newlisticon"
        app:layout_constraintTop_toTopOf="@+id/newlisticon"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/date"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginBottom="240dp"
        android:hint="date (01/01)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/newlisticon"
        app:layout_constraintEnd_toEndOf="@+id/newlisticon"
        app:layout_constraintStart_toStartOf="@+id/newlisticon" />

    <EditText
        android:id="@+id/time"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:layout_marginTop="14dp"
        android:hint="time (01:00)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/newlisticon"
        app:layout_constraintEnd_toEndOf="@+id/newlisticon"
        app:layout_constraintStart_toStartOf="@+id/newlisticon"
        app:layout_constraintTop_toBottomOf="@+id/date"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/addTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_add_24"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/newlisticon"
        app:layout_constraintEnd_toEndOf="@+id/newlisticon"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/newlisticon"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:background="@drawable/ic_baseline_clear_24"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/newlisticon"
        app:layout_constraintEnd_toEndOf="@+id/newlisticon"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/newlisticon"
        app:layout_constraintTop_toBottomOf="@+id/time"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>