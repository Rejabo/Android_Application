<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Search">


    <Button
        android:id="@+id/imageButton"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"
        android:onClick="onClick"
        android:text="choose image"
        app:layout_constraintBottom_toTopOf="@+id/searchButton"
        app:layout_constraintStart_toEndOf="@+id/editDescriptionButton"
        app:layout_constraintTop_toBottomOf="@+id/profileDescription"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/profileDescription"
        android:layout_width="388dp"
        android:layout_height="196dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/bubble_in"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466" />

    <Button
        android:id="@+id/editDescriptionButton"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_background"
        android:onClick="onClick"
        android:text="edit"
        app:layout_constraintBottom_toTopOf="@+id/searchButton"
        app:layout_constraintStart_toStartOf="@+id/profileDescription"
        app:layout_constraintTop_toBottomOf="@+id/profileDescription"
        app:layout_constraintVertical_bias="0.166" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="369dp"
        android:layout_height="144dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="96dp"
        app:layout_constraintBottom_toTopOf="@+id/profileDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092"
        app:srcCompat="@drawable/user1" />


</androidx.constraintlayout.widget.ConstraintLayout>